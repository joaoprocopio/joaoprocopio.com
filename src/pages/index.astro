---
import About from "~/components/about.astro"
import Contacts from "~/components/contacts.astro"
import Entitled from "~/components/entitled.astro"
import Experience from "~/components/experience.astro"
import Footer from "~/components/footer.astro"
import Heading from "~/components/heading.astro"
import Projects from "~/components/projects.astro"
import Section from "~/components/section.astro"
import {
  SECTION_ABOUT,
  SECTION_CONTACTS,
  SECTION_EXPERIENCE,
  SECTION_PROJECTS,
} from "~/constants/sections"
import DefaultLayout from "~/layouts/default.astro"
---

<DefaultLayout>
  <script src="~/scripts/observer.ts"></script>

  <div class="container px-6 py-12 sm:px-8 sm:py-16 md:px-12 md:py-24">
    <div class="lg:grid lg:grid-cols-5 lg:gap-x-4">
      <Heading
        class="lg:fixed lg:inset-y-0 lg:grid lg:grid-rows-[auto_auto_1fr] lg:py-24"
      />

      <main class="pt-12 sm:pt-16 md:pt-24 lg:col-start-3 lg:col-end-6 lg:pt-0">
        <!-- TODO: consertar o scroll margin top -->
        <div
          class="[&>*:not(:first-child)]:mt-12 sm:[&>*:not(:first-child)]:mt-16 md:[&>*:not(:first-child)]:mt-24">
          <Entitled id={SECTION_ABOUT.ID} title={SECTION_ABOUT.TITLE}>
            <Section>
              <About />
            </Section>
          </Entitled>

          <Entitled id={SECTION_EXPERIENCE.ID} title={SECTION_EXPERIENCE.TITLE}>
            <Section>
              <Experience />
            </Section>
          </Entitled>

          <Entitled id={SECTION_PROJECTS.ID} title={SECTION_PROJECTS.TITLE}>
            <Section>
              <Projects />
            </Section>
          </Entitled>

          <Entitled id={SECTION_CONTACTS.ID} title={SECTION_CONTACTS.TITLE}>
            <Section>
              <Contacts />
            </Section>
          </Entitled>

          <Footer />
        </div>
      </main>
    </div>
  </div>
</DefaultLayout>
