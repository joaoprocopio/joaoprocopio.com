---
import About from "~/components/about.astro"
import Contacts from "~/components/contacts.astro"
import Experience from "~/components/experience.astro"
import Footer from "~/components/footer.astro"
import Heading from "~/components/heading.astro"
import Projects from "~/components/projects.astro"
import {
  SECTION_ABOUT,
  SECTION_CONTACTS,
  SECTION_EXPERIENCE,
  SECTION_PROJECTS,
} from "~/constants/sections"
import DefaultLayout from "~/layouts/default.astro"
---

<DefaultLayout>
  <script src="~/scripts/observer.ts"></script>

  <div class="container px-6 py-12 sm:px-8 sm:py-16 md:px-12 md:py-24">
    <div class="lg:grid lg:grid-cols-5 lg:gap-x-4">
      <Heading
        class="lg:fixed lg:inset-y-0 lg:col-start-1 lg:col-end-3 lg:grid lg:max-h-svh lg:grid-rows-[auto_auto_1fr] lg:py-24"
      />

      <main
        class="pt-12 sm:pt-16 md:pt-24 lg:col-start-3 lg:col-end-6 lg:pt-0 [&>*]:scroll-mt-24 [&>*:not(:first-child)]:mt-24">
        <About id={SECTION_ABOUT.ID} class="[&>*+*]:mt-6" />
        <Experience id={SECTION_EXPERIENCE.ID} class="[&>*+*]:mt-6" />
        <Projects id={SECTION_PROJECTS.ID} class="[&>*+*]:mt-6" />
        <Contacts id={SECTION_CONTACTS.ID} class="[&>*+*]:mt-6" />

        <Footer class="[&>*+*]:mt-4" />
      </main>
    </div>
  </div>
</DefaultLayout>
