---
import { twMerge } from "tailwind-merge"

type Props = {
  variant?: TVariant
  element?: TElement
  class?: string
}

type TElement = keyof HTMLElementTagNameMap
type TVariant =
  | "largeTitle"
  // | "title1"
  // | "title2"
  // | "title3"
  | "headline"
  | "body"
  // | "callout"
  | "subheadline"
// | "footnote"
type TVariantClass = Record<TVariant, string>

const variantProp: Props["variant"] = Astro.props.variant ?? "body"
const elementProp: Props["element"] = Astro.props.element
const classProp: Props["class"] = Astro.props.class

const VARIANT_CLASS: TVariantClass = {
  largeTitle: "text-[34px]/[41px] tracking-[0.4px] font-bold",
  headline: "text-[17px]/[22px] -tracking-[0.43px] font-semibold",
  body: "text-[17px]/[22px] -tracking-[0.43px]",
  subheadline: "text-[15px]/[20px] -tracking-[0.23px]",
}

const Element: TElement = elementProp ?? "div"
---

<Element class={twMerge(VARIANT_CLASS[variantProp], classProp)}>
  <slot />
</Element>
