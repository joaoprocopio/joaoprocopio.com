---
import { twMerge } from "tailwind-merge"

type Props = {
  variant: TVariant
  element?: TElement
  class?: string
}

type TElement = keyof HTMLElementTagNameMap
type TVariant = "h1" | "h2" | "h3" | "h4" | "small" | "p"
type TVariantElement = Record<TVariant, TElement>
type TVariantClass = Record<TVariant, string>

const DEFALT_ELEMENT: TElement = "p"

const VARIANT_ELEMENT: TVariantElement = {
  h1: "h1",
  h2: "h2",
  h3: "h3",
  h4: "h3",
  p: "p",
  small: "small",
}

const VARIANT_CLASS: TVariantClass = {
  h1: "scroll-m-20 text-4xl font-extrabold tracking-tight lg:text-5xl",
  h2: "scroll-m-20 pb-2 text-3xl font-semibold tracking-tight first:mt-0",
  h3: "scroll-m-20 text-2xl font-semibold tracking-tight",
  h4: "scroll-m-20 text-xl font-semibold tracking-tight",
  small: "text-sm font-medium leading-none",
  p: "leading-7 [&:not(:first-child)]:mt-6",
}

const Element: TElement =
  Astro.props.element ?? VARIANT_ELEMENT[Astro.props.variant ?? DEFALT_ELEMENT]
---

<Element class={twMerge(VARIANT_CLASS[Astro.props.variant], Astro.props.class)}>
  <slot />
</Element>
