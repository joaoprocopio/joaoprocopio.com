---
import Typography from "~/components/typography.astro"
import { SECTIONS } from "~/constants/sections"
import { LINKS } from "~/constants/links"

type Props = astroHTML.JSX.HTMLAttributes

const props = Astro.props
---

<header {...props}>
  <section>
    <Typography variant="largeTitle" affect="emphasized" element="h1">
      João Procópio
    </Typography>

    <Typography
      variant="headline"
      affect="emphasized"
      element="h2"
      class="mt-1">
      Software Engineer
    </Typography>

    <Typography
      variant="callout"
      affect="regular"
      element="h3"
      class="text-foreground-secondary mt-6 max-w-2xs">
      I'll help you turn your product into something special.
    </Typography>
  </section>

  <ol class="mt-16 [&>li+li]:mt-2">
    {
      SECTIONS.map((section) => (
        <li
          id={section.LINK_ID}
          data-active="false"
          class="text-foreground-tertiary [&[data-active=true]]:text-foreground-primary [&[data-active=true]]:list-disc">
          <Typography
            variant="subheadline"
            affect="emphasized"
            element="a"
            class="hover:text-foreground-primary focus-visible:text-foreground-primary uppercase"
            href={section.HREF}>
            {section.LABEL}
          </Typography>
        </li>
      ))
    }
  </ol>

  <nav class="place-content-end [&>a+a]:ml-3">
    {
      LINKS.map((link) => (
        <a
          href={link.HREF}
          target="_blank"
          class:list={[
            "text-foreground-secondary inline-block",
            "hover:text-foreground-primary focus-visible:text-foreground-primary",
          ]}>
          <link.ICON class="h-6" />
        </a>
      ))
    }
  </nav>
</header>
