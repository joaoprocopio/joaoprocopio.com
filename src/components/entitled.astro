---
import { twMerge } from "tailwind-merge"
import Typography from "~/components/typography.astro"

type Props = {
  title: string
} & astroHTML.JSX.HTMLAttributes

const { title: titleProp, class: classProp, ...props } = Astro.props
---

<div
  class={twMerge(classProp, "scroll-mt-12 sm:scroll-mt-16 md:scroll-mt-24")}
  {...props}>
  <div
    class="bg-background-primary/45 sticky top-0 -mx-6 flex h-14 items-center px-6 backdrop-blur-lg sm:-mx-8 sm:px-8 md:-mx-12 md:px-12 lg:sr-only">
    <Typography variant="headline" affect="emphasized" class="uppercase">
      {titleProp}
    </Typography>
  </div>

  <slot />
</div>
