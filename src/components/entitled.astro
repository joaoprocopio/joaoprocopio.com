---
import Typography from "~/components/typography.astro"

type Props = {
  title: string
} & astroHTML.JSX.HTMLAttributes

const { title: titleProp, ...props } = Astro.props
---

<div {...props}>
  <div
    class="bg-background/30 sticky top-0 -mx-6 flex h-14 items-center px-6 backdrop-blur-lg sm:-mx-8 sm:px-8 md:-mx-12 md:px-12 lg:sr-only">
    <Typography
      variant="headline"
      affect="emphasized"
      class="uppercase tabular-nums">
      {titleProp}
    </Typography>
  </div>

  <slot />
</div>
