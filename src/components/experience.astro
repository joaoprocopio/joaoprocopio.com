---
import Typography from "~/components/typography.astro"
import { formatDate } from "~/utils/date"
import type { TExperience } from "~/constants/experiences"
import { EXPERIENCES } from "~/constants/experiences"

type Props = {
  experiences?: TExperience[]
  company?: string
}

const props = Astro.props
---

<div class="[&>*+*]:mt-8">
  {
    (props.experiences ?? EXPERIENCES).map((experience) =>
      "experiences" in experience ? (
        <Astro.self
          company={experience.company}
          experiences={experience.experiences as unknown as TExperience[]}
        />
      ) : (
        <div>
          <div>
            <Typography variant="title3" affect="emphasized">
              {experience.title}
            </Typography>

            <Typography
              variant="headline"
              affect="regular"
              class="text-accent-foreground mt-0.5">
              <span>{props.company ?? experience.company}</span>
              <span> • </span>
              <span>{formatDate(experience.from)}</span>
              <span> — </span>
              <span>{formatDate(experience.to!)}</span>
            </Typography>
          </div>

          <Typography class="mt-4" variant="body">
            {experience.description}
          </Typography>

          <div class="mt-3.5">
            {experience.skills.map((skill) => (
              <Typography
                element="span"
                variant="caption1"
                affect="emphasized"
                class="bg-accent text-secondary-foreground mt-2 mr-2 inline-block rounded-full px-2.5 py-1.5">
                {skill}
              </Typography>
            ))}
          </div>
        </div>
      ),
    )
  }
</div>
