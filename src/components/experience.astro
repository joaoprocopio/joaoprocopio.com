---
import Typography from "~/components/typography.astro"
import { EXPERIENCES } from "~/constants/experiences"
import { formatDate } from "~/utils/date"
---

<div class="[&>*+*]:mt-8">
  {
    EXPERIENCES.map((experience) =>
      "experiences" in experience ? (
        experience.experiences.map((innerExperience) => (
          <div>
            <div>
              <Typography variant="title3" affect="emphasized">
                {innerExperience.title}
              </Typography>

              <Typography
                variant="headline"
                affect="regular"
                class="text-foreground-secondary mt-0.5">
                <span>{experience.company}</span>
                <span> · </span>
                <span>{formatDate(innerExperience.from)}</span>
                <span> — </span>
                <span>{formatDate(innerExperience.to)}</span>
              </Typography>
            </div>

            <Typography class="mt-4" variant="body">
              {innerExperience.description}
            </Typography>

            <div class="mt-3.5">
              {innerExperience.skills.map((skill) => (
                <Typography
                  element="span"
                  variant="subheadline"
                  affect="emphasized"
                  class="bg-foreground-quaternary/20 mt-2 mr-2 inline-block rounded-full px-2.5 py-1.5">
                  {skill}
                </Typography>
              ))}
            </div>
          </div>
        ))
      ) : (
        <div>
          <div>
            <Typography variant="title3" affect="emphasized">
              {experience.title}
            </Typography>

            <Typography
              variant="headline"
              affect="regular"
              class="text-foreground-secondary mt-0.5">
              <span>{experience.company}</span>
              <span> · </span>
              <span>{formatDate(experience.from)}</span>
              <span> — </span>
              <span>{formatDate(experience.to)}</span>
            </Typography>
          </div>

          <Typography class="mt-4" variant="body">
            {experience.description}
          </Typography>

          <div class="mt-3.5">
            {experience.skills.map((skill) => (
              <Typography
                element="span"
                variant="subheadline"
                affect="emphasized"
                class="bg-foreground-quaternary/20 mt-2 mr-2 inline-block rounded-full px-2.5 py-1.5">
                {skill}
              </Typography>
            ))}
          </div>
        </div>
      ),
    )
  }
</div>
