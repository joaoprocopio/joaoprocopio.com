---
import { formatDate } from "~/utils/date"
import type { TExperience } from "~/constants/experiences"
import { EXPERIENCES } from "~/constants/experiences"

type Props = {
  experiences?: TExperience[]
  company?: string
}

const props = Astro.props
---

<div class="[&>*+*]:mt-8">
  {
    (props.experiences ?? EXPERIENCES).map((experience) =>
      "experiences" in experience ? (
        <Astro.self
          company={experience.company}
          experiences={experience.experiences as unknown as TExperience[]}
        />
      ) : (
        <div class="flex flex-col gap-y-3.5">
          <div class="flex flex-col justify-between sm:flex-row sm:items-center">
            <p class="text-foreground font-semibold">
              {experience.title} · {props.company ?? experience.company}
            </p>

            <p class="text-accent-foreground mt-1">
              <span>{formatDate(experience.from)}</span>
              <span> — </span>
              <span>{formatDate(experience.to!)}</span>
            </p>
          </div>

          <p>{experience.description}</p>

          <div class="flex flex-wrap gap-2">
            {experience.skills.map((skill) => (
              <span class="text-3xs bg-accent text-accent-foreground inline-block shrink-0 rounded-full px-2.5 py-1.5 font-medium">
                {skill}
              </span>
            ))}
          </div>
        </div>
      ),
    )
  }
</div>
