{
  "extends": "astro/tsconfigs/strictest",

  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],

  "compilerOptions": {
    "baseUrl": ".",

    "checkJs": true,
    "allowJs": true,
    "noErrorTruncation": true,

    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    "paths": {
      "~/*": ["./src/*"],
    },
  },
}
